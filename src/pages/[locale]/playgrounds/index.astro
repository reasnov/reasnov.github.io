---
import AppLayout from "@layouts/AppLayout.astro";
import { trans } from "@core/Translator";
import playgrounds from "@data/playgrounds.json";

export function getStaticPaths() {
	return [
		{ params: { locale: "en" } },
		{ params: { locale: "id" } },
	];
}

const locale = Astro.currentLocale || "en";
---

<AppLayout title={trans("pages.playgrounds.title", {}, locale)}>
    <section class="flex flex-col gap-12 my-10" data-aos="fade-in">
        <!-- Breadcrumb / Directory Style Header -->
        <div class="flex flex-col gap-2">
            <div class="flex items-center gap-2 text-[10px] font-bold uppercase tracking-widest text-neutral-500">
                <span>ROOT</span>
                <span>/</span>
                <span>PLAYGROUNDS</span>
                <span>/</span>
                <span class="text-black dark:text-white underline">{locale.toUpperCase()}</span>
            </div>
            <div class="flex flex-col gap-4 border-l-4 border-black dark:border-white pl-6 mt-4">
                <h1 class="text-4xl md:text-6xl font-black uppercase tracking-tighter leading-none">
                    {trans("pages.playgrounds.title", {}, locale)}
                </h1>
                <p class="text-neutral-500 font-bold uppercase text-xs md:text-sm tracking-widest">
                    // {trans("pages.playgrounds.subtitle", {}, locale)}
                </p>
            </div>
        </div>

        <!-- Experiments Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {playgrounds.map((item, index) => (
                <div 
                    class="tui-window group flex flex-col transition-transform duration-300 hover:-translate-y-2"
                    data-aos="fade-up"
                    data-aos-delay={index * 100}
                >
                    <div class="tui-window-header">
                        <div class="flex items-center gap-2">
                            <span class="icon-[tabler--flask] size-3"></span>
                            <span>EXP_{String(index + 1).padStart(3, '0')}.EXE</span>
                        </div>
                        <div class="flex gap-1">
                            <div class="size-2 border border-white/30 dark:border-black/30"></div>
                            <div class="size-2 border border-white/30 dark:border-black/30"></div>
                        </div>
                    </div>
                    
                    <div class="p-6 flex flex-col gap-4 flex-1">
                        <div class="flex items-center justify-between">
                            <div class="flex flex-wrap gap-1">
                                {item.tags.map(tag => (
                                    <span class="text-[8px] font-bold uppercase px-1 border border-black dark:border-white opacity-40">
                                        {tag}
                                    </span>
                                ))}
                            </div>
                            <span class="text-[8px] font-black opacity-20 group-hover:opacity-100 transition-opacity">v1.0.0</span>
                        </div>

                        <h2 class="text-xl font-bold uppercase tracking-tight group-hover:underline decoration-2">{item.title}</h2>
                        
                        <p class="text-xs text-neutral-600 dark:text-neutral-500 leading-relaxed flex-1 italic">
                            &gt; {item.description}
                        </p>

                        <a 
                            href={item.link} 
                            target="_blank" 
                            class="tui-button-primary text-[10px] w-full text-center mt-4 py-2"
                        >
                            {trans("pages.playgrounds.button", {}, locale)}
                        </a>
                    </div>
                    
                    <!-- Bottom Info Bar -->
                    <div class="bg-neutral-100 dark:bg-neutral-900 px-3 py-1 flex justify-between items-center border-t border-black dark:border-white">
                        <span class="text-[7px] font-bold uppercase tracking-tighter text-neutral-500">ACCESS: PUBLIC</span>
                        <div class="flex gap-1">
                            <span class="size-1.5 bg-black dark:bg-white animate-pulse"></span>
                        </div>
                    </div>
                </div>
            ))}
        </div>

        <!-- Footer Stats -->
        <div class="tui-panel border-dashed border-neutral-300 dark:border-neutral-800 flex justify-between items-center py-2 px-4 mt-8">
            <span class="text-[9px] font-bold text-neutral-500">USER@REASVYN:~/playgrounds$ ls -la</span>
            <span class="text-[9px] font-bold text-neutral-500 uppercase tracking-widest">{playgrounds.length} EXPERIMENTS_FOUND</span>
        </div>
    </section>
</AppLayout>
