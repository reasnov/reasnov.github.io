---
import { config } from "@core/Config";
import { getRelativeLocaleUrl } from "astro:i18n";

interface Props {
	name?: string;
	url?: string;
	size?: string;
}

const lang = Astro.currentLocale || "en";
const { name = config("settings.site_name"), url = getRelativeLocaleUrl(lang, "/"), size = "sm" } = Astro.props;

const sizeClass = `text-${size}`;
---

<a class={`flex items-center gap-1 flex-nowrap ${sizeClass}`} href={url}>
	<span class="font-black">{name}</span>
</a>
