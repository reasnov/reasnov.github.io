---
import { config } from "@core/Config";
import { getRelativeLocaleUrl } from "astro:i18n";

interface Props {
	name?: string;
	url?: string;
	size?: string;
}

const lang = Astro.currentLocale || "en";
const { name = config("settings.site_name"), url = getRelativeLocaleUrl(lang, "/"), size = "sm" } = Astro.props;

const sizeClass = size === "lg" ? "text-lg" : "text-sm";
---

<a class={`flex items-center gap-2 group ${sizeClass}`} href={url}>
	<div class="flex size-6 items-center justify-center bg-primary font-black text-primary-content">
		R
	</div>
	<span class="group-hover:text-accent font-black tracking-tighter uppercase transition-colors">{name}</span>
</a>
