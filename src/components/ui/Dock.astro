---
const { title, icons } = Astro.props;
---

<div class="flex w-full flex-col gap-3">
	<div class="flex items-center gap-3 px-1">
		<span
			class="bg-primary text-primary-content px-3 py-1 text-[9px] font-black tracking-widest uppercase md:text-[10px]"
		>
			{title}
		</span>
		<div class="bg-border/10 h-px flex-1"></div>
	</div>

	<div
		class="custom-scrollbar border-border/5 bg-primary/5 flex w-full flex-nowrap items-center gap-4 overflow-x-auto border-2 p-4 sm:gap-6 sm:p-6"
	>
		{
			icons.map((icon: { icon: string; name: string }) => (
				<div class="group flex shrink-0 flex-col items-center gap-2 transition-all" title={icon.name}>
					<div class="border-border/10 bg-base group-hover:border-accent group-hover:bg-primary/5 flex size-14 items-center justify-center border-2 grayscale transition-all group-hover:grayscale-0 sm:size-16">
						<span
							class={`${icon.icon} size-8 opacity-40 transition-all group-hover:scale-110 group-hover:opacity-100 sm:size-10`}
						/>
					</div>
					<span class="text-content/40 text-[8px] font-bold uppercase transition-opacity group-hover:opacity-100">
						{icon.name}
					</span>
				</div>
			))
		}
	</div>
</div>
