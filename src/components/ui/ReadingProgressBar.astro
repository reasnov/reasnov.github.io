<div id="reading-progress-container" class="fixed top-0 left-0 w-full h-1.5 z-[60] pointer-events-none bg-neutral-200 dark:bg-neutral-900 overflow-hidden">
    <div id="reading-progress-bar" class="h-full bg-primary w-0 transition-all duration-100 ease-out relative">
        <div class="absolute right-0 top-0 h-full w-4 bg-white/30 animate-pulse"></div>
    </div>
</div>

<script>
    function updateProgress() {
        const progressBar = document.getElementById('reading-progress-bar');
        if (!progressBar) return;

        const winScroll = document.body.scrollTop || document.documentElement.scrollTop;
        const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
        const scrolled = (winScroll / height) * 100;
        
        progressBar.style.width = scrolled + "%";
    }

    window.addEventListener('scroll', updateProgress);
    updateProgress();
</script>