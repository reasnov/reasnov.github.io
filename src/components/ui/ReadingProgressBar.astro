<div
	id="reading-progress-container"
	class="pointer-events-none fixed top-0 left-0 z-[60] h-1.5 w-full overflow-hidden bg-border/10"
>
	<div id="reading-progress-bar" class="bg-accent relative h-full w-0 transition-all duration-100 ease-out">
		<div class="absolute top-0 right-0 h-full w-4 animate-pulse bg-accent-content/30"></div>
	</div>
</div>

<script>
	function updateProgress() {
		const progressBar = document.getElementById("reading-progress-bar");
		if (!progressBar) return;

		const winScroll = document.body.scrollTop || document.documentElement.scrollTop;
		const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
		const scrolled = (winScroll / height) * 100;

		progressBar.style.width = scrolled + "%";
	}

	window.addEventListener("scroll", updateProgress);
	updateProgress();
</script>
