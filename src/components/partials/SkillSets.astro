---
import skills from "@data/skills.json";

const count = skills.length;
---

<div class="flex flex-col w-full">
	<div class="w-full">
		<span class="font-bold text-sm bg-white text-black w-fit">Skill Sets: [{count}+]</span>
	</div>
	<div class="w-full flex items-center overflow-x-auto flex-nowrap p-5 rounded-xl gap-6 justify-around">
		{
			skills.map((skill) => (
				<span
					class={`inline-block size-12 aspect-square leading-none shrink-0 transition-all ease-in-out grayscale-100 opacity-10 hover:opacity-100 hover:grayscale-0 hover:scale-120 ${skill.icon}`}
					title={skill.name}
				>
					{""}
				</span>
			))
		}
	</div>
</div>
