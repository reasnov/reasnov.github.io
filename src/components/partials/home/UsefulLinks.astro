---
import { trans } from "@core/Translator";
import links from "@data/links.json";

const locale = Astro.currentLocale || "en";
---

<section class="my-20 flex w-full flex-col gap-8" data-aos="fade-in">
	<div class="flex flex-col gap-2">
		<h2 class="border-border w-fit border-b pb-2 text-xl font-black tracking-widest uppercase">
			&gt;&gt; {trans("useful_links.title", {}, locale)}
		</h2>
		<p class="text-content/40 text-[10px] font-bold uppercase">-- {trans("useful_links.subtitle", {}, locale)}</p>
	</div>

	<div class="grid grid-cols-2 gap-4 md:grid-cols-4">
		{
			links.map((link, index) => (
				<a
					href={link.url}
					target="_blank"
					class="group tui-panel border-border/10 hover:bg-t-cyan/5 hover:border-t-cyan flex flex-col items-center gap-4 text-center transition-all"
					data-aos="fade-up"
					data-aos-delay={index * 50}
				>
					<div class="border-border/10 group-hover:border-t-cyan group-hover:text-t-cyan flex size-12 items-center justify-center border transition-all">
						<span class={`${link.icon} size-6`} />
					</div>
					<div class="flex flex-col gap-1">
						<span class="group-hover:text-t-cyan text-[10px] font-black tracking-tight uppercase transition-colors">
							{link.title}
						</span>
						<span class="text-content/30 text-[8px] font-bold tracking-widest uppercase">
							{link.category}
						</span>
					</div>
				</a>
			))
		}
	</div>
</section>
