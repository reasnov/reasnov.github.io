---
import FakeTerminal from "./FakeTerminal.astro";
import { trans } from "@core/Translator";

const locale = Astro.currentLocale || "en";
---

<div class="flex flex-1 flex-col items-center justify-center gap-12 py-12 lg:flex-row" data-aos="fade-in">
	<div class="flex flex-1 flex-col gap-8">
		<div class="flex flex-col gap-2 leading-none">
			<p class="animate-pulse text-xs font-bold tracking-[0.2em] text-neutral-500 uppercase">
				&gt;&gt; {trans("hero.greeting", {}, locale)}
			</p>
			<h1 class="text-6xl font-black tracking-tighter text-neutral-900 md:text-8xl dark:text-neutral-50">
				{trans("hero.name", {}, locale)}<span class="animate-blink text-accent">_</span>
			</h1>
			<div class="mt-2 flex items-center gap-3">
				<span class="text-xs font-bold tracking-widest text-neutral-500 uppercase"
					>{trans("hero.role_prefix", {}, locale)}</span
				>
				<span
					class="bg-black px-2 py-0.5 text-sm font-bold text-white uppercase md:text-base dark:bg-white dark:text-black"
				>
					{trans("hero.role", {}, locale)}
				</span>
			</div>
		</div>

		<div class="tui-panel border-l-4 border-l-black bg-neutral-50 dark:border-l-white dark:bg-neutral-900/10">
			<p
				class="text-sm leading-relaxed text-neutral-700 md:text-base dark:text-neutral-400"
				set:html={trans("hero.description", {}, locale)}
			/>
		</div>

		<div class="flex w-full flex-wrap gap-4">
			<a href="https://github.com/reasnov" class="tui-button-primary text-sm">
				{trans("hero.buttons.explore", {}, locale)} [F1]
			</a>
			<a href="https://linkedin.com/in/reasnov" target="__blank" class="tui-button text-sm">
				{trans("hero.buttons.connect", {}, locale)} [F2]
			</a>
		</div>
	</div>

	<div class="flex w-full flex-1 items-center justify-center">
		<div class="tui-window w-full">
			<div class="tui-window-header">
				<span>SYSTEM_BOOT.LOG</span>
				<div class="flex gap-1">
					<span class="size-2 border border-white/20"></span>
					<span class="size-2 border border-white/20"></span>
					<span class="size-2 border border-white/20"></span>
				</div>
			</div>
			<FakeTerminal />
		</div>
	</div>
</div>
