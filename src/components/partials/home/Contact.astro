---
import { trans } from "@core/Translator";

const locale = Astro.currentLocale || "en";
const email = "reasnov.official@gmail.com";
---

<section class="my-32 flex w-full flex-col items-center justify-center gap-8" data-aos="fade-in">
	<div class="tui-window w-full max-w-3xl">
		<div class="tui-window-header">
			<span>SEND_MESSAGE.EXE</span>
			<div class="flex gap-1">
				<span class="flex size-3 items-center justify-center border border-primary-content/20 text-[8px]">-</span>
				<span class="flex size-3 items-center justify-center border border-primary-content/20 text-[8px]">□</span>
				<span class="flex size-3 items-center justify-center border border-primary-content/20 text-[8px]">×</span>
			</div>
		</div>

		<div class="flex flex-col items-center gap-8 p-8 text-center md:p-12">
			<div class="flex flex-col gap-4">
				<h2 class="text-3xl leading-none font-black tracking-tighter uppercase md:text-5xl">
					{trans("contact.title", {}, locale)}
				</h2>
				<p class="mx-auto max-w-lg text-content/60">
					{trans("contact.description", {}, locale)}
				</p>
			</div>

			<div class="flex w-full flex-col items-center gap-4">
				<a href={`mailto:${email}`} class="tui-btn-primary tui-btn-lg w-full md:w-fit">
					&gt; {trans("contact.button", {}, locale)}
				</a>

				<div class="flex w-full items-center gap-4 opacity-20">
					<div class="h-px flex-1 bg-border"></div>
					<span class="text-[10px] font-bold tracking-[0.5em] uppercase">{email}</span>
					<div class="h-px flex-1 bg-border"></div>
				</div>
			</div>
		</div>
	</div>
</section>
