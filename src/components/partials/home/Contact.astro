---
import { trans } from "@core/Translator";

const locale = Astro.currentLocale || "en";
const email = "reasnov.official@gmail.com";
---

<section class="flex flex-col items-center justify-center w-full gap-8 my-32 text-center" data-aos="zoom-in">
    <div class="flex flex-col gap-4 max-w-2xl">
        <h2 class="text-4xl md:text-5xl font-bold text-primary">{trans("contact.title", {}, locale)}</h2>
        <p class="text-neutral-400 leading-relaxed">
            {trans("contact.description", {}, locale)}
        </p>
    </div>

    <div class="flex flex-col items-center gap-6">
        <a 
            href={`mailto:${email}`} 
            class="group relative flex items-center gap-3 px-8 py-4 bg-white text-black font-bold text-lg hover:bg-primary hover:text-white transition-all duration-300 rounded-none overflow-hidden"
        >
            <span class="icon-[tabler--mail] size-6"></span>
            {trans("contact.button", {}, locale)}
            
            <!-- Decorative corner -->
            <div class="absolute top-0 right-0 size-4 bg-primary/20 -translate-y-2 translate-x-2 group-hover:translate-y-0 group-hover:translate-x-0 transition-transform"></div>
        </a>
        
        <p class="text-sm font-mono text-neutral-600">
            {email}
        </p>
    </div>
</section>
