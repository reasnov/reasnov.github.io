---
import { trans } from "@core/Translator";
import experiences from "@data/experience.json";

const locale = Astro.currentLocale || "en";
---

<section class="my-20 flex w-full flex-col gap-8" data-aos="fade-in">
	<div class="flex flex-col gap-2 border-l-4 border-black pl-4 dark:border-white">
		<h2 class="text-xl font-black tracking-widest uppercase">{trans("experience.title", {}, locale)}</h2>
		<p class="text-xs font-bold tracking-tighter text-neutral-500 uppercase">
			-- {trans("experience.subtitle", {}, locale)}
		</p>
	</div>

	<div class="flex flex-col gap-0 border border-neutral-200 dark:border-neutral-900">
		{
			experiences.map((exp, index) => (
				<div
					class={`group border-b border-neutral-100 p-6 transition-colors last:border-0 hover:bg-neutral-50 dark:border-neutral-900 dark:hover:bg-neutral-900/10`}
					data-aos="fade-up"
					data-aos-delay={index * 50}
				>
					<div class="flex flex-col gap-4 md:flex-row md:items-start">
											<div class="flex min-w-[100px] flex-col">
												<span
													class="w-fit border border-accent px-2 py-0.5 text-xs font-bold text-accent"
												>
													{exp.year}
												</span>
											</div>

						<div class="flex flex-1 flex-col gap-2">
							<div class="flex flex-col">
								<h3 class="text-lg font-bold transition-colors group-hover:underline">{exp.title}</h3>
								<span class="text-xs font-bold text-neutral-500 uppercase">{exp.company}</span>
							</div>

							<p class="max-w-3xl text-xs leading-relaxed text-neutral-600 md:text-sm dark:text-neutral-400">
								{exp.description}
							</p>
						</div>
					</div>
				</div>
			))
		}
	</div>
</section>
