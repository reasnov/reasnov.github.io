---
import { trans } from "@core/Translator";
import { app_info } from "@core/AppInfo";

const locale = Astro.currentLocale || "en";
const year = new Date().getFullYear();
const version = app_info("app.version");
---

<footer class="border-border bg-primary text-primary-fg mt-20 w-full border-t-2 py-4">
	<div
		class="container mx-auto flex flex-col items-center justify-between gap-4 px-4 text-[10px] font-bold tracking-widest uppercase md:flex-row"
	>
		<p set:html={trans("footer.copyright", { year }, locale)} />

		<div class="flex items-center gap-6">
			<div class="flex items-center gap-2">
				<span class="bg-accent size-2 animate-pulse"></span>
				<span>SYSTEM_ONLINE</span>
			</div>
			<div class="hidden items-center gap-2 md:flex">
				<span>{version.toUpperCase()}</span>
			</div>
		</div>
	</div>
</footer>
